<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sportsCardCVID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/grey" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/rectangleborder"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/statusColorParentitemIVID"
            android:layout_width="2.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:background="@color/transparent" />

        <RelativeLayout
            android:id="@+id/parentRLID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/white"

            android:orientation="horizontal">


            <TextView
                android:id="@+id/bookingidPerTVID"
                style="@style/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:gravity="left"
                android:text="@string/bookinIdNo"
                android:textColor="#333333" />

            <ImageView
                android:id="@+id/bookCancelIVID"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/forbidden"
                android:gravity="right"
                android:padding="5dp"

                android:visibility="gone" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>

