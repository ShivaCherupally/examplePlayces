<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#E7E7E7" />
      <stroke
          android:width="0.5dp"
          android:color="#FFF" />
      <corners
          android:radius="0dp" />
      <padding
          android:left="0dp"
          android:top="0dp"
          android:right="0dp"
          android:bottom="0dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#FFF"
          android:endColor="#FFF"
          android:angle="270" />
      <stroke
          android:width="0.7dp"
          android:color="@color/white" />
      <corners
          android:radius="0dp" />
      <padding
          android:left="0dp"
          android:top="0dp"
          android:right="0dp"
          android:bottom="0dp" />
    </shape>
  </item>
</selector>