<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#FFFFFF" />
      <stroke
          android:width="0.6dp"
          android:color="#333" />
      <corners
          android:radius="5dp" />
      <padding
          android:left="4dp"
          android:top="4dp"
          android:right="4dp"
          android:bottom="4dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#FFFFFF"
          android:endColor="#FFFFFF"
          android:angle="270" />
      <stroke
          android:width="0.6dp"
          android:color="#333" />
      <corners
          android:radius="5dp" />
      <padding
          android:left="4dp"
          android:top="4dp"
          android:right="4dp"
          android:bottom="4dp" />
    </shape>
  </item>
</selector>