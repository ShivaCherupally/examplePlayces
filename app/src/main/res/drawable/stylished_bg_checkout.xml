<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#d9d9d9" />
      <stroke
          android:width="0dp"
          android:color="@color/transparent"/>
      <corners
          android:radius="0dp" />
      <padding
          android:left="4dp"
          android:top="4dp"
          android:right="4dp"
          android:bottom="4dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#eeeeee"
          android:endColor="#F2F2F2"
          android:angle="270" />
      <stroke
          android:width="0dp"
          android:color="@color/transparent" />
      <corners
          android:radius="10dp" />
      <padding
          android:left="4dp"
          android:top="4dp"
          android:right="4dp"
          android:bottom="4dp" />
    </shape>
  </item>
</selector>